<!doctype html>
<html lang="utf-8">
<head>
    <meta charset="UTF-8">
    <title>后台管理-数据统计</title>
    <link rel="stylesheet" href="/public/stylesheets/users.css">
    <script type="text/javascript" src="https://himg2.huanqiu.com/statics/hq2013/js/lib/jquery1.9.1.js"></script>
    <script type="text/javascript" src="/public/javascripts/loans.js"></script>
</head>
<body>
<% include common/top.ejs%>
<div class="filter_form">
    <form action="statistics" method="get">
        <input type="hidden" name="action" value="filter" autocomplete="on">
        业务:<select name="business">
            <option value="储蓄业务" <%if(oldFilterData.business=="储蓄业务"){%>selected<%}%>>储蓄业务</option>
            <option value="贷款业务" <%if(oldFilterData.business=="贷款业务"){%>selected<%}%>>贷款业务</option>
        </select>
        年: <select name="year">
            <option value="2018" <%if(oldFilterData.year==2018){%>selected<%}%>>2018</option>
            <option value="2019" <%if(oldFilterData.year==2019){%>selected<%}%>>2019</option>
            <option value="2020" <%if(oldFilterData.year==2020){%>selected<%}%>>2020</option>
            <option value="2021" <%if(oldFilterData.year==2021){%>selected<%}%>>2021</option>
        </select>
        季度: <select name="quarter" value="<%=oldFilterData.quarter%>">
                <option value="0" <%if(oldFilterData.quarter=="0"){%>selected<%}%>>NA</option>
                <option value="1" <%if(oldFilterData.quarter=="1"){%>selected<%}%>>1</option>
                <option value="2" <%if(oldFilterData.quarter=="2"){%>selected<%}%>>2</option>
                <option value="3" <%if(oldFilterData.quarter=="3"){%>selected<%}%>>3</option>
                <option value="4" <%if(oldFilterData.quarter=="4"){%>selected<%}%>>4</option>
        </select>
        月: <select name="month">
                <option value="0">null</option>
                <% for(var i = 1;i<13;i++){%>
                <option value="<%=i%>" <%if(parseInt(oldFilterData.month)==i){%>
                    selected
                <%}%> > <%=i%></option>
                <%}%>
        </select>
        <input type="submit" value="查询">
    </form>
</div>
<table>
    <tr>
        <th class="bank">支行名字</th>
        <th class="money">业务额</th>
        <th class="count">用户数</th>
    </tr>
    <% for(var i = 0;i<formData.length;i++){%>
    <tr>
        <td><%=formData[i].支行名字%></td>
        <td><%=formData[i].业务量%></td>
        <td><%=formData[i].客户数%></td>
    </tr>
    <%}%>
</table>
</body>
</html>