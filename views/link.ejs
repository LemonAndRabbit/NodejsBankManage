<!doctype html>
<html lang="utf-8">
<head>
    <meta charset="UTF-8">
    <title>后台管理-账户所有权管理</title>
    <link rel="stylesheet" href="/public/stylesheets/users.css">
    <script type="text/javascript" src="https://himg2.huanqiu.com/statics/hq2013/js/lib/jquery1.9.1.js"></script>
    <script type="text/javascript" src="/public/javascripts/users.js"></script>
</head>
<body>
<% include common/top.ejs%>
<div class="add_button">
    <img src="/public/images/users/add.png">
</div>
<div class="add_form">
    <img src="/public/images/users/add.png">
    <div class="form_bg"></div>
    <form action="?" method="post">
        账户类型: <select name="atype">
            <option value="客户拥有储蓄账户">储蓄账户</option>
            <option value="客户拥有支票账户">支票账户</option>
        </select><br>
        客户身份证号: <input type="text" name="id"><br>
        支行名称: <input type="text" name="bname"><br>
        户号: <input type="text" name="account"><br>
        <input type="submit" value="添加">
    </form>
</div>
<table>
    <tr>
        <th class="account">户号</th>
        <th class="atype">账户类型</th>
        <th class="bname">支行名字</th>
        <th class="id">客户身份证号</th>
        <th class="operation">操作</th>
    </tr>
    <% for(var i = 0;i<formData.length;i++){%>
    <tr>
        <td><%=formData[i].户号%></td>
        <td><%=formData[i].账户类型%></td>
        <td><%=formData[i].支行名字%></td>
        <td><%=formData[i].客户身份证号%></td>
        <td>
            <a href="?action=del&id=<%=formData[i].客户身份证号%>&atype=<%=formData[i].账户类型%>&bname=<%=formData[i].支行名字%>" onclick="return confirm('确定删除？')">
                <button>删除</button>
            </a>
        </td>
    </tr>
    <%}%>
</table>
</body>
</html>